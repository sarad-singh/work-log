<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Work Log - Admin Dashboard</title>
</head>
<style>
    .text-danger {
        color: rgb(250, 59, 59);
    }

    .text-success {
        color: rgb(65, 216, 130);
    }
</style>

<body>
    <h1>Admin Dashboard</h1>
    <div><a href="/admin/auth/logout">Logout</a></div>

    <span class="text-danger">{{errorMessage}}</span><br>
    <span class="text-success">{{successMessage}}</span><br>

    <h3>All Logs</h3>
    <table>
        <tr>
            <th>employee</th>
            <th>title</th>
            <th>description</th>
            <th>date</th>
            <th>delete</th>
        </tr>
        {{#each data.logs}}
        <tr>
            <td>{{this.employee.name}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{toLocaleDateString this.createdDate}}</td>
            <td><a href="/admin/delete/log/{{this.id}}">del</a></td>
        </tr>
        {{/each}}

    </table>

</body>
<script>
    { { console } }
</script>

</html>